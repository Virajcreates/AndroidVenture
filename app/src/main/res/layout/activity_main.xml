<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Camera Preview Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/previewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#000000"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:scaleType="fitCenter" />
            
        <!-- Overlay Gradient for better text visibility if needed -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#10000000"/>
            
    </androidx.cardview.widget.CardView>

    <!-- FPS Badge -->
    <LinearLayout
        android:id="@+id/fpsBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/fps_badge_background"
        android:elevation="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="@+id/previewCard"
        app:layout_constraintTop_toTopOf="@+id/previewCard">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_circle_online"
            android:backgroundTint="@color/accent_green" />

        <TextView
            android:id="@+id/tvFPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="FPS: 0.0"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/control_panel_background"
        android:elevation="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Handle Bar for visual cue -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_handle_bar"
            android:backgroundTint="#40FFFFFF"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="EDGE DETECTION"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:letterSpacing="0.2" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnToggle"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary"
                android:drawableTop="@drawable/ic_toggle"
                android:drawablePadding="4dp"
                android:drawableTint="#FFFFFF"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:fontFamily="sans-serif-medium"
                android:text="Toggle Mode"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_success"
                android:drawableTop="@drawable/ic_cloud_upload"
                android:drawablePadding="4dp"
                android:drawableTint="#FFFFFF"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:fontFamily="sans-serif-medium"
                android:text="Upload Frame"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
